{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "startCommand": "python manage.py migrate --run-syncdb && gunicorn letterflow.wsgi:application --bind 0.0.0.0:$PORT"
  }
}
